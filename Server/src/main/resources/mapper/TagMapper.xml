<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.youthfighter.calendartag.mapper.TagMapper">
    <select id="queryAll" resultType="top.youthfighter.calendartag.model.Tag">
        select id, name, isDelete, color
        from tag
        order by isDelete
    </select>

    <select id="queryEnabledTags" resultType="top.youthfighter.calendartag.model.Tag">
        select id, name, isDelete, color
        from tag
        order by isDelete
    </select>

    <select id="queryEnabledTagsById" resultType="top.youthfighter.calendartag.model.Tag">
        select id, name, isDelete, color
        from tag
        where isDelete = 0 and id = #{id}
        order by isDelete
    </select>
</mapper>